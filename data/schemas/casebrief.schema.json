{
    "$schema": "https://json-schema.org/draft-07/schema",
    "id": "/schemas/casebrief",
    "title": "Case Brief",
    "description": "Case Brief JSON form",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "case": {
            "type": "object",
            "properties": {
                "style": {
                    "description": "Name of the case",
                    "type": "string"
                },
                "cite": {
                    "type": "object",
                    "properties": {
                        "vol": {
                            "type": "integer"
                        },
                        "reporter": {
                            "$ref": "#reporter"},
                        "page": {
                            "type": "integer"
                        }
                    }
                },                
                "court": {"type": "string"},
                "year": {"type": "integer"},
                "disposition": {"type": "string"},
                "history": {"type": "string"},
                "issue": {"type": "string"},
                "facts": {"type": "string"},
                "rule": {"type": "string"},
                "reasoning": {"type": "string"},
                "holding": {"type": "string"},
                "takeaway": {"type": "string"},
                "notes": {"type": "string"}
            }
        }
    }
}